// Prisma schema for nunu-log

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

enum EntryType {
  SLEEP
  MEAL
  WORK
  CHILDCARE
  ENTERTAINMENT
  OTHER
}

enum InputMethod {
  MANUAL
  SIRI
  API
}

model TimeEntry {
  id          String       @id @default(cuid())
  type        EntryType
  startTime   DateTime
  endTime     DateTime?
  notes       String?
  inputMethod InputMethod  @default(MANUAL)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([type])
  @@index([startTime])
  @@index([createdAt])
}
