{
  "extends": "@bubu-log/typescript-config/nextjs.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./src/*"],
      "@payload-config": ["./payload.config.ts"],
      "@bubu-log/ui": ["../../packages/ui/src"],
      "@bubu-log/ui/*": ["../../packages/ui/src/*"],
      "@bubu-log/log-ui": ["../../packages/log-ui/src"],
      "@bubu-log/log-ui/*": ["../../packages/log-ui/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
